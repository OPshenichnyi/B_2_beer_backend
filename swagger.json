{
  "openapi": "3.0.0",
  "info": {
    "title": "B_2_Beer web aplication",
    "description": "The API for the B-2-Beer backend",
    "version": "1.0.0"
  },
  "-servers": {
    "-url": "https://b-2-beer-backend.vercel.app/",
    "description": "Dev server"
  },
  "paths": {
    "/register": {
      "post": {
        "tags": [
          "User Authentication Module"
        ],
        "summary": "Register a new users.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "clientType": {
                    "type": "string",
                    "enum": [
                      "seller, buyer"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Register success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Please verify your email address"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "test@ukr.net"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "missing required email field"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflict email address",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email already exist"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}